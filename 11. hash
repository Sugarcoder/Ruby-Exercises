# hash = { } 


# Example: 

fruits = {
          "apples" => 5,
          "bananas" => 5,
          "cherries" => 8
          }
          
          
          
          
# Fetching something from a hash

# Example: Finding the price of Ramen ($3):

restaurant_menu["Ramen"]                  # Put "Ramen" in [   ] to find the price of it





# Modifying a hash

# Example:

restaurant_menu = {}
restaurant_menu["Ramen"] = 5
restaurant+menu["Green Tea"] = 3







# Iterating over a hash (each)

# Example: 

restaurant_menu = {"Ramen" => 5, "California Roll" => 3, "Tea" => 2}

restaurant_menu.each do | item, price| 

   puts "#{item}: #{price}"

end






# Modifying the iterated hash (changing the price)

restaurant_menu = { "Ramen" => 5, "California Roll" => 3, "Tea" => 2 }

restaurant_menu.each do |item, price|

  restaurant_menu[item] = price + (price * 0.2)
end





# Hash shortcuts

Candy = Hash[:skittles, 99, :reeces, 98, :chew_bubblegum, true]
p Candy




def Sweets
  a = [:skittles, 10]
  b = [:reeces, 25]
  c = [:chew_bubblegum, false]
  candy = [a,b,c]
  Hash[candy]
end
p Sweets





